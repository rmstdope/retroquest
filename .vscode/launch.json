{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: RetroQuest App",
            "type": "debugpy",
            "request": "launch",
            "module": "retroquest",
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Python: pytest tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/"
            ],
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
